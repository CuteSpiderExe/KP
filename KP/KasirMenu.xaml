<Window x:Class="KP.KasirMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KP"
        mc:Ignorable="d"
        Title="KasirMenu" Height="330" Width="260">
    <Grid>
        <Button x:Name="Back" Content="Выйти" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="Back_Click"/>
        <Button Content="Управление заказами" HorizontalAlignment="Center" Margin="0,117,0,0" VerticalAlignment="Top" Click="Kasir_Click" Width="132"/>
        <Button Content="Управление клиентами" HorizontalAlignment="Center" Margin="0,142,0,0" VerticalAlignment="Top" Click="Client_Click"/>
        <TextBlock x:Name="Login" HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="Логин" VerticalAlignment="Top"/>
    </Grid>
</Window>
