<Window x:Class="KP.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KP"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="429">
    <Grid>
        <Button x:Name="Avt" Content="Авторизироваться" HorizontalAlignment="Center" Margin="0,292,0,0" VerticalAlignment="Top" Click="Avt_Click"/>
        <TextBox x:Name="Log" HorizontalAlignment="Center" Margin="0,135,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="250" MaxLength="15"/>
        <PasswordBox x:Name="Pass" HorizontalAlignment="Center" Margin="0,200,0,0"  VerticalAlignment="Top" Width="250"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="82,169,0,0" VerticalAlignment="Top"/>
        <Label Content="Логин" HorizontalAlignment="Left" Margin="82,104,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="error" HorizontalAlignment="Center" Margin="0,245,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>

    </Grid>
</Window>
